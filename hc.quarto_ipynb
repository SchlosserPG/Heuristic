        "# Function for transit: (T) \n",
        "# Flipping a random bit in the solution\n",
        "def transit(sol):\n",
        "    new_sol = sol.copy()\n",
        "    flip_index = np.random.randint(len(sol))\n",
        "    new_sol[flip_index] = 1 - new_sol[flip_index]  # Flip the bit (0 to 1, or 1 to 0)\n",
